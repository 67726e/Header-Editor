{
	"manifest_version": 2,
	"name": "Chrome Headers",
	"description": "Alter your HTTP request headers on the fly",
	"version": "1.0",
	"default_locale": "en",

	"options_page": "/views/options.html",

	"permissions": [
		"webRequestBlocking",
		"*://*/"
	],

	"browser_action": {
		"default_icon": "./resources/images/icon.png",
		"default_popup": "/views/popup.html"
	},

	"background": {
		"scripts": ["/actions/headers.js"]
	}
}
